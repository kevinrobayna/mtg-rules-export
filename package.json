{
  "name": "javascript-action",
  "version": "1.0.0",
  "description": "Github Action to export the rules from the website of the game Magic: The Gathering",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest test",
    "all": "npm run build && npm run format && npm run lint && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:kevinrobayna/mtg-rules-export.git"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "TypeScript"
  ],
  "author": "Kevin Robayna",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kevinrobayna/mtg-rules-export/issues"
  },
  "homepage": "https://github.com/kevinrobayna/mtg-rules-export#readme",
  "dependencies": {
    "@actions/core": "^1.9.0",
    "axios": "^0.27.2",
    "cheerio": "^1.0.0-rc.12"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.31",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.6",
    "@typescript-eslint/parser": "^5.30.6",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.19.0",
    "eslint-plugin-github": "^4.3.6",
    "eslint-plugin-jest": "^26.6.0",
    "jest": "^28.1.1",
    "js-yaml": "^4.1.0",
    "prettier": "2.7.1",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  }
}
